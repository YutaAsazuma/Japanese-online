<%= simple_form_for @product do |detail| %>
  <%= detail.input :name, label: "Products name" %>
  <%= detail.input :description , label: "Description" %>
  <%= detail.input :price, label: "Price" %>
  <%= detail.collection_select :type_id, Type.all, :id, :name, prompt: 'Select a type' %>
  <%= detail.file_field :images, multiple: true, accept: "image/*" %>
  <%= detail.submit "Add product" %>
<% end %>
